<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MeditationApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MeditationApp"
    xmlns:views="clr-namespace:MeditationApp.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="MeditationApp">

    <!-- Flyout Header -->
    <Shell.FlyoutHeader>
        <Grid BackgroundColor="{StaticResource Primary}"
              HeightRequest="200">
            <StackLayout VerticalOptions="Center"
                         HorizontalOptions="Center">
                <Image Source="logo.png"
                       HeightRequest="80"
                       WidthRequest="80"
                       HorizontalOptions="Center"/>
                <Label Text="Lucen"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Center"
                       Margin="0,10,0,0"/>
            </StackLayout>
        </Grid>
    </Shell.FlyoutHeader>

    <!-- Main app with flyout menu - Only Today and Calendar -->
    <FlyoutItem Title="Today"
                Icon="home.svg"
                Shell.FlyoutBehavior="Flyout">
        <ShellContent
            Title="Today"
            ContentTemplate="{DataTemplate views:TodayPage}"
            Route="TodayPage"/>
    </FlyoutItem>

    <FlyoutItem Title="Calendar"
                Icon="calendar.svg"
                Shell.FlyoutBehavior="Flyout">
        <ShellContent
            Title="Calendar"
            ContentTemplate="{DataTemplate views:CalendarPage}"
            Route="CalendarPage"/>
    </FlyoutItem>

    <FlyoutItem Title="Settings"
                Icon="settings.svg"
                Shell.FlyoutBehavior="Flyout">
        <ShellContent
            Title="Settings"
            ContentTemplate="{DataTemplate views:SettingsPage}"
            Route="SettingsPage"/>
    </FlyoutItem>

</Shell>

<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MeditationApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MeditationApp"
    xmlns:views="clr-namespace:MeditationApp.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="MeditationApp">

    <!-- Splash page as initial route -->
    <ShellContent
        Title="Splash"
        ContentTemplate="{DataTemplate views:SplashPage}"
        Route="SplashPage"/>

    <!-- Login and other standalone pages -->
    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="LoginPage"/>

    <ShellContent
        Title="Profile"
        ContentTemplate="{DataTemplate views:ProfilePage}"
        Route="ProfilePage"/>

    <!-- Main app page -->
    <ShellContent
        Title="Today"
        ContentTemplate="{DataTemplate views:TodayPage}"
        Route="MainApp"/>

    <!-- Past Sessions page -->
    <ShellContent
        Title="Past Sessions"
        ContentTemplate="{DataTemplate views:CalendarPage}"
        Route="PastSessionsPage"/>

</Shell>

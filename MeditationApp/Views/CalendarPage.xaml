<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:MeditationApp.ViewModels"
             xmlns:models="clr-namespace:MeditationApp.Models"
             x:Class="MeditationApp.Views.CalendarPage"
             Title="Past Sessions">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Settings"
                     Clicked="OnSettingsClicked"/>
    </ContentPage.ToolbarItems>

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0"
                             EndPoint="0,1">
            <GradientStop Color="#F6F9FF"
                          Offset="0.0"/>
            <GradientStop Color="#E2ECFF"
                          Offset="0.4"/>
            <GradientStop Color="#F7F0E9"
                          Offset="1.0"/>
        </LinearGradientBrush>
    </ContentPage.Background>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <VerticalStackLayout Grid.Row="0"
                             Padding="20,10,20,0"
                             Spacing="5">
            <Label Text="Your Meditation Journey"
                   FontSize="28"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="Black"/>
            <Label Text="Explore your past meditation sessions"
                   FontSize="16"
                   HorizontalOptions="Center"
                   TextColor="#666666"
                   Margin="0,0,0,10"/>
        </VerticalStackLayout>

        <!-- Content -->
        <Grid Grid.Row="1"
              BackgroundColor="Transparent">

            <!-- Loading Indicator -->
            <ActivityIndicator IsVisible="{Binding IsLoading}"
                               IsRunning="{Binding IsLoading}"
                               Color="{AppThemeBinding Light=#007ACC, Dark=#4FC3F7}"
                               VerticalOptions="Center"
                               HorizontalOptions="Center"/>

            <!-- Sessions List -->
            <CollectionView ItemsSource="{Binding DaysWithSessions}"
                            IsVisible="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}"
                            BackgroundColor="Transparent"
                            Margin="0,10,0,0">

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="viewmodels:DaySessionData">
                        <Grid Padding="16,8">
                            <Grid.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:SimpleCalendarViewModel}}, Path=NavigateToDayCommand}"
                                                      CommandParameter="{Binding .}"/>
                            </Grid.GestureRecognizers>

                            <!-- Day Card -->
                            <Border BackgroundColor="{StaticResource GlassyWhite}"
                                    Stroke="{StaticResource GlassyBorder}"
                                    StrokeThickness="1"
                                    StrokeShape="RoundRectangle 20"
                                    Padding="24">
                                <Border.Shadow>
                                    <Shadow Brush="Black"
                                            Opacity="0.08"
                                            Radius="12"
                                            Offset="0,4"/>
                                </Border.Shadow>

                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Date Header -->
                                    <Grid Grid.Row="0"
                                          Margin="0,0,0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackLayout Grid.Column="0"
                                                     Orientation="Vertical"
                                                     Spacing="2">
                                            <Label Text="{Binding DisplayDate}"
                                                   FontSize="20"
                                                   FontAttributes="Bold"
                                                   TextColor="Black"/>
                                            <Label Text="{Binding RelativeDate}"
                                                   FontSize="14"
                                                   TextColor="#666666"/>
                                        </StackLayout>

                                        <Label Grid.Column="1"
                                               Text="{Binding MoodEmoji}"
                                               FontSize="24"
                                               Margin="8,0"
                                               IsVisible="{Binding HasMood}"/>

                                        <Label Grid.Column="2"
                                               Text="›"
                                               FontSize="20"
                                               TextColor="{StaticResource ActionBlue}"
                                               VerticalOptions="Center"/>
                                    </Grid>

                                    <!-- Session Count -->
                                    <Label Grid.Row="1"
                                           Text="{Binding SessionCount}"
                                           FontSize="16"
                                           FontAttributes="Bold"
                                           TextColor="{StaticResource ActionBlue}"
                                           Margin="0,0,0,12"/>

                                    <!-- Session Pills -->
                                    <StackLayout Grid.Row="2"
                                                 Orientation="Horizontal"
                                                 Spacing="8"
                                                 Margin="0,0,0,8"
                                                 IsVisible="{Binding Sessions.Count, Converter={StaticResource IntToBoolConverter}}">
                                        <CollectionView ItemsSource="{Binding Sessions}"
                                                        ItemsLayout="HorizontalList"
                                                        HeightRequest="30">
                                            <CollectionView.ItemTemplate>
                                                <DataTemplate x:DataType="models:MeditationSession">
                                                    <Border BackgroundColor="{StaticResource GlassyBlue}"
                                                            Stroke="{StaticResource ActionBlue}"
                                                            StrokeThickness="1"
                                                            StrokeShape="RoundRectangle 14"
                                                            Padding="10,6"
                                                            Margin="0,0,6,0">
                                                        <Label Text="{Binding Timestamp, StringFormat='{0:HH:mm}'}"
                                                               FontSize="12"
                                                               FontAttributes="Bold"
                                                               TextColor="{StaticResource ActionBlue}"/>
                                                    </Border>
                                                </DataTemplate>
                                            </CollectionView.ItemTemplate>
                                        </CollectionView>
                                    </StackLayout>

                                    <!-- Notes Preview -->
                                    <Label Grid.Row="3"
                                           Text="{Binding Notes}"
                                           FontSize="14"
                                           TextColor="#666666"
                                           LineBreakMode="TailTruncation"
                                           MaxLines="2"
                                           IsVisible="{Binding HasNotes}"/>
                                </Grid>
                            </Border>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

                <!-- Empty State -->
                <CollectionView.EmptyView>
                    <StackLayout VerticalOptions="Center"
                                 HorizontalOptions="Center"
                                 Padding="40"
                                 Spacing="20">
                        <Frame BackgroundColor="{StaticResource GlassyWhite}"
                               BorderColor="{StaticResource GlassyBorder}"
                               CornerRadius="80"
                               WidthRequest="160"
                               HeightRequest="160"
                               HorizontalOptions="Center"
                               HasShadow="True">
                            <Label Text="🧘‍♀️"
                                   FontSize="64"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"/>
                        </Frame>
                        <VerticalStackLayout Spacing="8"
                                HorizontalOptions="Center">
                            <Label Text="Your meditation journey starts here"
                                   FontSize="20"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   TextColor="Black"/>
                            <Label Text="Complete your first meditation session to see it appear here"
                                   FontSize="16"
                                   HorizontalOptions="Center"
                                   HorizontalTextAlignment="Center"
                                   TextColor="#666666"
                                   MaximumWidthRequest="280"/>
                        </VerticalStackLayout>
                        <Button Text="Start Meditation"
                                BackgroundColor="{StaticResource ActionBlue}"
                                TextColor="White"
                                HeightRequest="50"
                                CornerRadius="25"
                                FontSize="16"
                                FontAttributes="Bold"
                                WidthRequest="200"
                                Clicked="OnBackToTodayClicked"
                                Margin="0,10,0,0">
                            <Button.Shadow>
                                <Shadow Brush="Black"
                                        Opacity="0.2"
                                        Radius="8"
                                        Offset="0,2"/>
                            </Button.Shadow>
                        </Button>
                    </StackLayout>
                </CollectionView.EmptyView>
            </CollectionView>
        </Grid>
    </Grid>
</ContentPage>

<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MeditationApp.Views.TodayPage"
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="*,Auto">
        <!-- Scrollable Content -->
        <ScrollView Grid.Row="0">
            <VerticalStackLayout Padding="20"
                                 Spacing="20">

                <!-- Header Section -->
                <VerticalStackLayout Spacing="10">
                    <Label Text="{Binding FormattedDate}"
                           Style="{StaticResource SubHeadline}"
                           HorizontalOptions="Center"/>
                    <Label Text="{Binding WelcomeMessage}"
                           Style="{StaticResource Headline}"
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>

                <!-- Mood Selector -->
                <VerticalStackLayout Spacing="10"
                                     Padding="0,20,0,0">
                    <Label Text="How are you feeling today?"
                           HorizontalOptions="Center"
                           FontAttributes="Bold"
                           FontSize="16"/>
                    <HorizontalStackLayout HorizontalOptions="Center"
                                           Spacing="15">
                        <Button Text="😢"
                                Command="{Binding SelectMoodCommand}"
                                CommandParameter="1"
                                Style="{StaticResource MoodButton}"
                                BackgroundColor="{Binding SelectedMood, Converter={StaticResource EqualityToColorConverter}, ConverterParameter=1}"
                                FontSize="Large"/>
                        <Button Text="😟"
                                Command="{Binding SelectMoodCommand}"
                                CommandParameter="2"
                                Style="{StaticResource MoodButton}"
                                BackgroundColor="{Binding SelectedMood, Converter={StaticResource EqualityToColorConverter}, ConverterParameter=2}"
                                FontSize="Large"/>
                        <Button Text="😐"
                                Command="{Binding SelectMoodCommand}"
                                CommandParameter="3"
                                Style="{StaticResource MoodButton}"
                                BackgroundColor="{Binding SelectedMood, Converter={StaticResource EqualityToColorConverter}, ConverterParameter=3}"
                                FontSize="Large"/>
                        <Button Text="🙂"
                                Command="{Binding SelectMoodCommand}"
                                CommandParameter="4"
                                Style="{StaticResource MoodButton}"
                                BackgroundColor="{Binding SelectedMood, Converter={StaticResource EqualityToColorConverter}, ConverterParameter=4}"
                                FontSize="Large"/>
                        <Button Text="😊"
                                Command="{Binding SelectMoodCommand}"
                                CommandParameter="5"
                                Style="{StaticResource MoodButton}"
                                BackgroundColor="{Binding SelectedMood, Converter={StaticResource EqualityToColorConverter}, ConverterParameter=5}"
                                FontSize="Large"/>
                    </HorizontalStackLayout>
                </VerticalStackLayout>

                <!-- Today's Sessions List -->
                <VerticalStackLayout Spacing="10">
                    <Label Text="Today's Sessions"
                            FontAttributes="Bold"
                            FontSize="16"/>
                    <CollectionView ItemsSource="{Binding TodaySessions}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Frame Margin="0,5"
                                        Padding="10"
                                        BackgroundColor="#f0f0f0"
                                        CornerRadius="8">
                                    <VerticalStackLayout>
                                        <Label Text="{Binding Timestamp, StringFormat='Session at {0:HH:mm}'}"
                                                FontSize="14"/>
                                        <Label Text="{Binding Status}"
                                                FontSize="12"/>
                                        <Label Text="{Binding AudioPath}"
                                                FontSize="10"
                                                TextColor="Gray"/>
                                    </VerticalStackLayout>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Anchored Button at Bottom -->
        <VerticalStackLayout Grid.Row="1"
                             Padding="20,0,20,20">
            <Button Text="Create today's session"
                    Command="{Binding StartMeditationCommand}"
                    Style="{StaticResource ButtonOutline}"
                    HeightRequest="60"
                    FontSize="16"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>

<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:behaviors="clr-namespace:MeditationApp.Behaviors"
             x:Class="MeditationApp.Views.SettingsPage"
             Title="Settings"
             Shell.NavBarIsVisible="False">

       <ContentPage.Background>
              <SolidColorBrush Color="#EFEBD3"/>
       </ContentPage.Background>

       <Grid>
              <!-- Decorative abstract shapes for modern look (matching TodayPage) -->
              <Ellipse x:Name="Orb1"
                       WidthRequest="250"
                       HeightRequest="250"
                       Fill="#15BBDEFB"
                       HorizontalOptions="Start"
                       VerticalOptions="Start"
                       Margin="-100,-100,0,0"
                       InputTransparent="True">
                     <Ellipse.Behaviors>
                            <behaviors:FloatingAnimationBehavior FloatRangeX="20"
                                                                 FloatRangeY="15"
                                                                 Duration="10000"
                                                                 Delay="0"/>
                     </Ellipse.Behaviors>
              </Ellipse>

              <Ellipse x:Name="Orb2"
                       WidthRequest="180"
                       HeightRequest="180"
                       Fill="#1BE1BEE7"
                       HorizontalOptions="End"
                       VerticalOptions="Start"
                       Margin="0,-70,-70,0"
                       InputTransparent="True">
                     <Ellipse.Behaviors>
                            <behaviors:FloatingAnimationBehavior FloatRangeX="25"
                                                                 FloatRangeY="20"
                                                                 Duration="12000"
                                                                 Delay="2000"/>
                     </Ellipse.Behaviors>
              </Ellipse>

              <Ellipse x:Name="Orb3"
                       WidthRequest="200"
                       HeightRequest="200"
                       Fill="#27FFCCBC"
                       HorizontalOptions="End"
                       VerticalOptions="End"
                       Margin="0,0,-80,-80"
                       InputTransparent="True">
                     <Ellipse.Behaviors>
                            <behaviors:FloatingAnimationBehavior FloatRangeX="30"
                                                                 FloatRangeY="25"
                                                                 Duration="15000"
                                                                 Delay="4000"/>
                     </Ellipse.Behaviors>
              </Ellipse>

              <Ellipse x:Name="Orb4"
                       WidthRequest="120"
                       HeightRequest="120"
                       Fill="#19B3E5FC"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       Margin="-150,150,0,0"
                       InputTransparent="True">
                     <Ellipse.Behaviors>
                            <behaviors:FloatingAnimationBehavior FloatRangeX="15"
                                                                 FloatRangeY="12"
                                                                 Duration="8000"
                                                                 Delay="6000"/>
                     </Ellipse.Behaviors>
              </Ellipse>

              <Ellipse x:Name="Orb5"
                       WidthRequest="140"
                       HeightRequest="140"
                       Fill="#20FFAB91"
                       HorizontalOptions="Start"
                       VerticalOptions="End"
                       Margin="-50,0,0,-50"
                       InputTransparent="True">
                     <Ellipse.Behaviors>
                            <behaviors:FloatingAnimationBehavior FloatRangeX="22"
                                                                 FloatRangeY="18"
                                                                 Duration="11000"
                                                                 Delay="3000"/>
                     </Ellipse.Behaviors>
              </Ellipse>

              <Ellipse x:Name="Orb6"
                       WidthRequest="90"
                       HeightRequest="90"
                       Fill="#22FFD54F"
                       HorizontalOptions="Center"
                       VerticalOptions="Start"
                       Margin="120,-30,0,0"
                       InputTransparent="True">
                     <Ellipse.Behaviors>
                            <behaviors:FloatingAnimationBehavior FloatRangeX="14"
                                                                 FloatRangeY="10"
                                                                 Duration="9000"
                                                                 Delay="8000"/>
                     </Ellipse.Behaviors>
              </Ellipse>


              <ScrollView>
                     <VerticalStackLayout Padding="20,0,20,90"
                                          Spacing="20">

                            <!-- Header with Hamburger Menu -->
                            <Grid Padding="0,20,0,0">
                                   <Button x:Name="HamburgerButton"
                                           Text="â˜°"
                                           FontSize="24"
                                           BackgroundColor="Transparent"
                                           TextColor="Black"
                                           WidthRequest="44"
                                           HeightRequest="44"
                                           HorizontalOptions="Start"
                                           VerticalOptions="Start"
                                           Clicked="OnHamburgerClicked"/>

                                   <Label Text="Settings"
                                          FontSize="28"
                                          FontAttributes="Bold"
                                          TextColor="Black"
                                          HorizontalOptions="Center"
                                          VerticalOptions="Center"/>
                            </Grid>

                            <!-- Notification Settings with glassmorphism -->
                            <Frame BackgroundColor="{StaticResource GlassyWhite}"
                                   BorderColor="{StaticResource GlassyBorder}"
                                   CornerRadius="20"
                                   Padding="24"
                                   HasShadow="True">
                                   <Frame.Shadow>
                                          <Shadow Brush="Black"
                                                  Opacity="0.08"
                                                  Radius="12"
                                                  Offset="0,4"/>
                                   </Frame.Shadow>
                                   <VerticalStackLayout Spacing="15">
                                          <Label Text="Notifications"
                                                 FontSize="20"
                                                 FontAttributes="Bold"
                                                 TextColor="Black"/>

                                          <Grid ColumnDefinitions="*,Auto">
                                                 <Label Grid.Column="0"
                                                        Text="Enable Notifications"
                                                        VerticalOptions="Center"
                                                        FontSize="16"
                                                        TextColor="Black"/>
                                                 <Switch Grid.Column="1"
                                                         IsToggled="{Binding NotificationsEnabled}"
                                                         OnColor="{StaticResource Primary}"/>
                                          </Grid>

                                          <VerticalStackLayout Spacing="15"
                                                               IsVisible="{Binding NotificationsEnabled}">
                                                 <Label Text="Daily Reminder Time"
                                                        FontSize="14"
                                                        TextColor="#666666"/>

                                                 <!-- Time picker with glassmorphism frame -->
                                                 <Frame BackgroundColor="{StaticResource GlassyBlue}"
                                                        BorderColor="{StaticResource GlassyBorder}"
                                                        CornerRadius="15"
                                                        Padding="15"
                                                        HasShadow="False">
                                                        <TimePicker Time="{Binding ReminderTime}"
                                                                    FontSize="16"
                                                                    TextColor="Black"
                                                                    BackgroundColor="Transparent"/>
                                                 </Frame>




                                          </VerticalStackLayout>
                                   </VerticalStackLayout>
                            </Frame>

                            <!-- Action Buttons with enhanced glassmorphism styling -->
                            <VerticalStackLayout Spacing="15"
                                                 Margin="0,20,0,0">

                                   <!-- View Profile Button -->
                                   <Frame Padding="0"
                                          CornerRadius="25"
                                          HasShadow="True"
                                          HorizontalOptions="Center"
                                          HeightRequest="50"
                                          WidthRequest="200"
                                          BackgroundColor="{StaticResource GlassyWhite}"
                                          BorderColor="{StaticResource GlassyBorder}">
                                          <Frame.Shadow>
                                                 <Shadow Brush="Black"
                                                         Offset="0,4"
                                                         Radius="12"
                                                         Opacity="0.1"/>
                                          </Frame.Shadow>
                                          <Button Text="View Profile"
                                                  Clicked="OnViewProfileClicked"
                                                  BackgroundColor="Transparent"
                                                  TextColor="Black"
                                                  FontSize="16"
                                                  FontAttributes="Bold"
                                                  HorizontalOptions="Fill"
                                                  VerticalOptions="Fill"
                                                  BorderColor="Transparent">
                                                 <VisualStateManager.VisualStateGroups>
                                                        <VisualStateGroupList>
                                                               <VisualStateGroup x:Name="CommonStates">
                                                                      <VisualState x:Name="Normal">
                                                                             <VisualState.Setters>
                                                                                    <Setter Property="Scale"
                                                                                            Value="1.0"/>
                                                                                    <Setter Property="Opacity"
                                                                                            Value="1.0"/>
                                                                             </VisualState.Setters>
                                                                      </VisualState>
                                                                      <VisualState x:Name="Pressed">
                                                                             <VisualState.Setters>
                                                                                    <Setter Property="Scale"
                                                                                            Value="0.95"/>
                                                                                    <Setter Property="Opacity"
                                                                                            Value="0.8"/>
                                                                             </VisualState.Setters>
                                                                      </VisualState>
                                                               </VisualStateGroup>
                                                        </VisualStateGroupList>
                                                 </VisualStateManager.VisualStateGroups>
                                          </Button>
                                   </Frame>

                                   <!-- Go Premium / Subscribe Button -->
                                   <Frame Padding="0"
                                          CornerRadius="25"
                                          HasShadow="True"
                                          HorizontalOptions="Center"
                                          HeightRequest="50"
                                          WidthRequest="200"
                                          BackgroundColor="#FFD700"
                                          BorderColor="Transparent">
                                          <Frame.Shadow>
                                                 <Shadow Brush="#FFD700"
                                                         Offset="0,6"
                                                         Radius="15"
                                                         Opacity="0.18"/>
                                          </Frame.Shadow>
                                          <Button Text="Go Premium"
                                                  Clicked="OnSubscribeClicked"
                                                  BackgroundColor="Transparent"
                                                  TextColor="Black"
                                                  FontSize="16"
                                                  FontAttributes="Bold"
                                                  HorizontalOptions="Fill"
                                                  VerticalOptions="Fill"
                                                  BorderColor="Transparent">
                                                 <VisualStateManager.VisualStateGroups>
                                                        <VisualStateGroupList>
                                                               <VisualStateGroup x:Name="CommonStates">
                                                                      <VisualState x:Name="Normal">
                                                                             <VisualState.Setters>
                                                                                    <Setter Property="Scale"
                                                                                            Value="1.0"/>
                                                                                    <Setter Property="Opacity"
                                                                                            Value="1.0"/>
                                                                             </VisualState.Setters>
                                                                      </VisualState>
                                                                      <VisualState x:Name="Pressed">
                                                                             <VisualState.Setters>
                                                                                    <Setter Property="Scale"
                                                                                            Value="0.95"/>
                                                                                    <Setter Property="Opacity"
                                                                                            Value="0.8"/>
                                                                             </VisualState.Setters>
                                                                      </VisualState>
                                                               </VisualStateGroup>
                                                        </VisualStateGroupList>
                                                 </VisualStateManager.VisualStateGroups>
                                          </Button>
                                   </Frame>

                                   <!-- Logout Button -->
                                   <Frame Padding="0"
                                          CornerRadius="25"
                                          HasShadow="True"
                                          HorizontalOptions="Center"
                                          HeightRequest="50"
                                          WidthRequest="200"
                                          BackgroundColor="#FF6B6B"
                                          BorderColor="Transparent">
                                          <Frame.Shadow>
                                                 <Shadow Brush="#FF6B6B"
                                                         Offset="0,6"
                                                         Radius="15"
                                                         Opacity="0.25"/>
                                          </Frame.Shadow>
                                          <Button Text="Logout"
                                                  Command="{Binding LogoutCommand}"
                                                  BackgroundColor="Transparent"
                                                  TextColor="White"
                                                  FontSize="16"
                                                  FontAttributes="Bold"
                                                  HorizontalOptions="Fill"
                                                  VerticalOptions="Fill"
                                                  BorderColor="Transparent">
                                                 <VisualStateManager.VisualStateGroups>
                                                        <VisualStateGroupList>
                                                               <VisualStateGroup x:Name="CommonStates">
                                                                      <VisualState x:Name="Normal">
                                                                             <VisualState.Setters>
                                                                                    <Setter Property="Scale"
                                                                                            Value="1.0"/>
                                                                                    <Setter Property="Opacity"
                                                                                            Value="1.0"/>
                                                                             </VisualState.Setters>
                                                                      </VisualState>
                                                                      <VisualState x:Name="Pressed">
                                                                             <VisualState.Setters>
                                                                                    <Setter Property="Scale"
                                                                                            Value="0.95"/>
                                                                                    <Setter Property="Opacity"
                                                                                            Value="0.8"/>
                                                                             </VisualState.Setters>
                                                                      </VisualState>
                                                               </VisualStateGroup>
                                                        </VisualStateGroupList>
                                                 </VisualStateManager.VisualStateGroups>
                                          </Button>
                                   </Frame>
                            </VerticalStackLayout>     
                     </VerticalStackLayout>
              </ScrollView>
       </Grid>
</ContentPage>

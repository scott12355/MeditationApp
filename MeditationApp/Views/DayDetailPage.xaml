<?xml version="1.0" encoding="utf-8" ?>
<uranium:UraniumContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:MeditationApp.Models"
             xmlns:converters="clr-namespace:MeditationApp.Converters"
             xmlns:behaviors="clr-namespace:MeditationApp.Behaviors"
             xmlns:controls="clr-namespace:MeditationApp.Controls"
             xmlns:uranium="http://schemas.enisn-projects.io/dotnet/maui/uraniumui"
             xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
             x:Class="MeditationApp.Views.DayDetailPage"
             Shell.NavBarIsVisible="True">

    <uranium:UraniumContentPage.Resources>
        <ResourceDictionary>
            <converters:MeditationSessionStatusToColorConverter x:Key="MeditationSessionStatusToColorConverter"/>
            <converters:StatusToDisplayStringConverter x:Key="StatusToDisplayStringConverter"/>
            <converters:StatusToColorConverter x:Key="StatusToColorConverter"/>
            <converters:StatusToBoolConverter x:Key="StatusToBoolConverter"/>
            <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
            <converters:BoolToPlayPauseConverter x:Key="BoolToPlayPauseConverter"/>
        </ResourceDictionary>
    </uranium:UraniumContentPage.Resources>

    <uranium:UraniumContentPage.Background>
        <SolidColorBrush Color="#EFEBD3"/>
    </uranium:UraniumContentPage.Background>

    <Grid BackgroundColor="#EFEBD3">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Decorative abstract shapes for modern look -->
        <Ellipse x:Name="Orb1"
                 WidthRequest="250"
                 HeightRequest="250"
                 Fill="#15BBDEFB"
                 HorizontalOptions="Start"
                 VerticalOptions="Start"
                 Margin="-100,-100,0,0"
                 InputTransparent="True">
            <Ellipse.Behaviors>
                <behaviors:FloatingAnimationBehavior FloatRangeX="20"
                                                     FloatRangeY="15"
                                                     Duration="12000"
                                                     Delay="0"/>
            </Ellipse.Behaviors>
        </Ellipse>

        <Ellipse x:Name="Orb2"
                 WidthRequest="180"
                 HeightRequest="180"
                 Fill="#1BE1BEE7"
                 HorizontalOptions="End"
                 VerticalOptions="Start"
                 Margin="0,-70,-70,0"
                 InputTransparent="True">
            <Ellipse.Behaviors>
                <behaviors:FloatingAnimationBehavior FloatRangeX="25"
                                                     FloatRangeY="20"
                                                     Duration="14000"
                                                     Delay="2000"/>
            </Ellipse.Behaviors>
        </Ellipse>

        <Ellipse x:Name="Orb3"
                 WidthRequest="200"
                 HeightRequest="200"
                 Fill="#27FFCCBC"
                 HorizontalOptions="End"
                 VerticalOptions="End"
                 Margin="0,0,-80,-80"
                 InputTransparent="True">
            <Ellipse.Behaviors>
                <behaviors:FloatingAnimationBehavior FloatRangeX="30"
                                                     FloatRangeY="25"
                                                     Duration="16000"
                                                     Delay="4000"/>
            </Ellipse.Behaviors>
        </Ellipse>

        <Ellipse x:Name="Orb4"
                 WidthRequest="130"
                 HeightRequest="130"
                 Fill="#19B3E5FC"
                 HorizontalOptions="Center"
                 VerticalOptions="Center"
                 Margin="-150,150,0,0"
                 InputTransparent="True">
            <Ellipse.Behaviors>
                <behaviors:FloatingAnimationBehavior FloatRangeX="18"
                                                     FloatRangeY="12"
                                                     Duration="10000"
                                                     Delay="6000"/>
            </Ellipse.Behaviors>
        </Ellipse>

        <Ellipse x:Name="Orb5"
                 WidthRequest="160"
                 HeightRequest="160"
                 Fill="#20FFAB91"
                 HorizontalOptions="Start"
                 VerticalOptions="End"
                 Margin="-50,0,0,-50"
                 InputTransparent="True">
            <Ellipse.Behaviors>
                <behaviors:FloatingAnimationBehavior FloatRangeX="22"
                                                     FloatRangeY="18"
                                                     Duration="13000"
                                                     Delay="3000"/>
            </Ellipse.Behaviors>
        </Ellipse>

        <Ellipse x:Name="Orb6"
                 WidthRequest="100"
                 HeightRequest="100"
                 Fill="#22FFD54F"
                 HorizontalOptions="Center"
                 VerticalOptions="Start"
                 Margin="120,-30,0,0"
                 InputTransparent="True">
            <Ellipse.Behaviors>
                <behaviors:FloatingAnimationBehavior FloatRangeX="15"
                                                     FloatRangeY="10"
                                                     Duration="11000"
                                                     Delay="8000"/>
            </Ellipse.Behaviors>
        </Ellipse>

        <!-- Main content -->
        <ScrollView Grid.Row="0"
                    x:Name="MainScrollView">
            <VerticalStackLayout Padding="20,20,20,180"
                                 Spacing="20">

                <!-- Header Section -->
                <VerticalStackLayout Spacing="10">
                    <Label Text="{Binding FormattedDate}"
                           Style="{StaticResource SubHeadline}"
                           HorizontalOptions="Center"
                           TextColor="Black"/>
                </VerticalStackLayout>

                <!-- Sessions Section -->
                <VerticalStackLayout Spacing="15"
                                     IsVisible="{Binding HasNoSessions, Converter={StaticResource InverseBoolConverter}}">
                    
                    <!-- Enhanced Frame with glassmorphism styling for sessions -->
                    <Frame BackgroundColor="{StaticResource GlassyWhite}"
                           BorderColor="{StaticResource GlassyBorder}"
                           CornerRadius="24"
                           Padding="24"
                           HasShadow="True"
                           MinimumHeightRequest="200">
                        <Frame.Shadow>
                            <Shadow Brush="Black"
                                    Offset="0,8"
                                    Radius="20"
                                    Opacity="0.12"/>
                        </Frame.Shadow>
                        <Frame.Effects>
                            <uranium:BlurEffect Mode="Light"
                                                AccentOpacity="0.1"/>
                        </Frame.Effects>

                        <VerticalStackLayout Spacing="15">
                            <Label Text="Meditation Sessions"
                                   FontSize="20"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   TextColor="Black"/>

                            <CollectionView ItemsSource="{Binding Sessions}"
                                            SelectedItem="{Binding SelectedSession, Mode=TwoWay}">
                                <CollectionView.ItemsLayout>
                                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="16" />
                                </CollectionView.ItemsLayout>
                                <CollectionView.ItemTemplate>
                                    <DataTemplate x:DataType="models:MeditationSession" >
                                        <Frame BackgroundColor="{StaticResource GlassyBlue}"
                                               BorderColor="{StaticResource GlassyBorder}"
                                               CornerRadius="18"
                                               Padding="20"
                                               HasShadow="False">
                                            <Grid RowDefinitions="Auto,Auto"
                                                  ColumnDefinitions="*,Auto,Auto"
                                                  RowSpacing="12"
                                                  
                                                  ColumnSpacing="15">

                                                <!-- Session Info Row -->
                                                <VerticalStackLayout Grid.Row="0"
                                                                     Grid.Column="0"
                                                                     Spacing="4">
                                                    <Label Text="{Binding Timestamp, StringFormat='Session at {0:HH:mm}'}"
                                                           FontSize="16"
                                                           FontAttributes="Bold"
                                                           TextColor="Black"/>
                                                    <Label Text="{Binding Timestamp, StringFormat='{0:dddd, MMMM dd, yyyy}'}"
                                                           FontSize="12"
                                                           TextColor="Gray"/>
                                                </VerticalStackLayout>

                                                
                                                <!-- Download Progress Indicator -->
                                                <ActivityIndicator Grid.Row="0"
                                                                   Grid.Column="2"
                                                                   IsRunning="{Binding IsDownloading}"
                                                                   IsVisible="{Binding IsDownloading}"
                                                                   Color="{StaticResource ActionBlue}"
                                                                   WidthRequest="40"
                                                                   HeightRequest="40"/>

                                                <!-- Audio Player Controls (always visible for completed sessions) -->
                                                <Frame Grid.Row="1"
                                                       Grid.ColumnSpan="3"
                                                       BackgroundColor="{StaticResource GlassyWhite}"
                                                       BorderColor="{StaticResource GlassyBorder}"
                                                       CornerRadius="20"
                                                       Padding="0"
                                                       HasShadow="True"
                                                       IsVisible="{Binding Status, Converter={StaticResource StatusToBoolConverter}, ConverterParameter=COMPLETED}">
                                                    <Frame.Effects>
                                                        <uranium:BlurEffect Mode="Light"
                                                                            AccentOpacity="0.3"/>
                                                    </Frame.Effects>
                                                    <Frame.Shadow>
                                                        <Shadow Brush="Black"
                                                                Offset="0,4"
                                                                Radius="12"
                                                                Opacity="0.15"/>
                                                    </Frame.Shadow>
                                                    
                                                    <!-- Enhanced Play Button -->
                                                    <Button Text="Play Meditation"
                                                            FontSize="16"
                                                            FontAttributes="Bold"
                                                            BackgroundColor="{StaticResource Primary}"
                                                            TextColor="White"
                                                            Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.PlaySessionCommand}"
                                                            CommandParameter="{Binding .}"
                                                            BorderColor="Transparent"
                                                            CornerRadius="20"
                                                            HeightRequest="50"
                                                            Margin="0">
                                                        <Button.Shadow>
                                                            <Shadow Brush="{StaticResource Primary}"
                                                                    Offset="0,4"
                                                                    Radius="10"
                                                                    Opacity="0.25"/>
                                                        </Button.Shadow>
                                                        <VisualStateManager.VisualStateGroups>
                                                            <VisualStateGroupList>
                                                                <VisualStateGroup x:Name="CommonStates">
                                                                    <VisualState x:Name="Normal">
                                                                        <VisualState.Setters>
                                                                            <Setter Property="Scale"
                                                                                    Value="1.0"/>
                                                                            <Setter Property="Opacity"
                                                                                    Value="1.0"/>
                                                                        </VisualState.Setters>
                                                                    </VisualState>
                                                                    <VisualState x:Name="Pressed">
                                                                        <VisualState.Setters>
                                                                            <Setter Property="Scale"
                                                                                    Value="0.96"/>
                                                                            <Setter Property="Opacity"
                                                                                    Value="0.85"/>
                                                                        </VisualState.Setters>
                                                                    </VisualState>
                                                                </VisualStateGroup>
                                                            </VisualStateGroupList>
                                                        </VisualStateManager.VisualStateGroups>
                                                    </Button>
                                                </Frame>
                                            </Grid>
                                        </Frame>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </VerticalStackLayout>
                    </Frame>
                </VerticalStackLayout>

                <!-- No Sessions Message -->
                <VerticalStackLayout Spacing="15"
                                     IsVisible="{Binding HasNoSessions}">
                    <Frame BackgroundColor="{StaticResource GlassyWhite}"
                           BorderColor="{StaticResource GlassyBorder}"
                           CornerRadius="24"
                           Padding="24"
                           HasShadow="True"
                           MinimumHeightRequest="200">
                        <Frame.Shadow>
                            <Shadow Brush="Black"
                                    Offset="0,8"
                                    Radius="20"
                                    Opacity="0.12"/>
                        </Frame.Shadow>
                        <Frame.Effects>
                            <uranium:BlurEffect Mode="Light"
                                                AccentOpacity="0.1"/>
                        </Frame.Effects>

                        <VerticalStackLayout Spacing="15"
                                             VerticalOptions="Center">
                            <Label Text="No Sessions Today"
                                   FontSize="20"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   TextColor="Black"/>
                            <Label Text="No meditation sessions recorded for this day"
                                   FontSize="14"
                                   TextColor="Gray"
                                   HorizontalOptions="Center"
                                   HorizontalTextAlignment="Center"/>
                        </VerticalStackLayout>
                    </Frame>
                </VerticalStackLayout>

                <!-- Notes Section -->
                <VerticalStackLayout Spacing="15"
                                     IsVisible="{Binding HasNoNotes, Converter={StaticResource InverseBoolConverter}}">
                    <Frame BackgroundColor="{StaticResource GlassyWhite}"
                           BorderColor="{StaticResource GlassyBorder}"
                           CornerRadius="24"
                           Padding="24"
                           HasShadow="True"
                           MinimumHeightRequest="150">
                        <Frame.Shadow>
                            <Shadow Brush="Black"
                                    Offset="0,8"
                                    Radius="20"
                                    Opacity="0.12"/>
                        </Frame.Shadow>
                        <Frame.Effects>
                            <uranium:BlurEffect Mode="Light"
                                                AccentOpacity="0.1"/>
                        </Frame.Effects>

                        <VerticalStackLayout Spacing="15">
                            <Label Text="Daily Notes"
                                   FontSize="20"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   TextColor="Black"/>

                            <Frame BackgroundColor="{StaticResource GlassyBlue}"
                                   BorderColor="{StaticResource GlassyBorder}"
                                   CornerRadius="18"
                                   Padding="20"
                                   HasShadow="False">
                                <Label Text="{Binding Notes}"
                                       FontSize="14"
                                       TextColor="Black"
                                       HorizontalOptions="Fill"
                                       LineBreakMode="WordWrap"/>
                            </Frame>
                        </VerticalStackLayout>
                    </Frame>
                </VerticalStackLayout>

                <!-- No Notes Message -->
                <VerticalStackLayout Spacing="15"
                                     IsVisible="{Binding HasNoNotes}">
                    <Frame BackgroundColor="{StaticResource GlassyWhite}"
                           BorderColor="{StaticResource GlassyBorder}"
                           CornerRadius="24"
                           Padding="24"
                           HasShadow="True"
                           MinimumHeightRequest="150">
                        <Frame.Shadow>
                            <Shadow Brush="Black"
                                    Offset="0,8"
                                    Radius="20"
                                    Opacity="0.12"/>
                        </Frame.Shadow>
                        <Frame.Effects>
                            <uranium:BlurEffect Mode="Light"
                                                AccentOpacity="0.1"/>
                        </Frame.Effects>

                        <VerticalStackLayout Spacing="15"
                                             VerticalOptions="Center">
                            <Label Text="Daily Notes"
                                   FontSize="20"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   TextColor="Black"/>
                            <Label Text="No notes recorded for this day"
                                   FontSize="14"
                                   TextColor="Gray"
                                   HorizontalOptions="Center"
                                   HorizontalTextAlignment="Center"/>
                        </VerticalStackLayout>
                    </Frame>
                </VerticalStackLayout>

                <!-- Mood Section -->
                <VerticalStackLayout Spacing="15"
                                     IsVisible="{Binding HasMood}">
                    <Frame BackgroundColor="{StaticResource GlassyWhite}"
                           BorderColor="{StaticResource GlassyBorder}"
                           CornerRadius="24"
                           Padding="24"
                           HasShadow="True"
                           MinimumHeightRequest="150">
                        <Frame.Shadow>
                            <Shadow Brush="Black"
                                    Offset="0,8"
                                    Radius="20"
                                    Opacity="0.12"/>
                        </Frame.Shadow>
                        <Frame.Effects>
                            <uranium:BlurEffect Mode="Light"
                                                AccentOpacity="0.1"/>
                        </Frame.Effects>

                        <VerticalStackLayout Spacing="15">
                            <Label Text="Mood"
                                   FontSize="20"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   TextColor="Black"/>
                            
                            <Frame BackgroundColor="{StaticResource GlassyBlue}"
                                   BorderColor="{StaticResource GlassyBorder}"
                                   CornerRadius="18"
                                   Padding="20"
                                   HasShadow="False">
                                <StackLayout Orientation="Horizontal"
                                             Spacing="20"
                                             HorizontalOptions="Center">
                                    <Label Text="{Binding MoodEmoji}"
                                           FontSize="40"/>
                                    <VerticalStackLayout Spacing="5"
                                                         VerticalOptions="Center">
                                        <Label Text="{Binding MoodDescription}"
                                               FontSize="18"
                                               FontAttributes="Bold"
                                               TextColor="Black"/>
                                        <Label Text="How you were feeling"
                                               FontSize="12"
                                               TextColor="Gray"/>
                                    </VerticalStackLayout>
                                </StackLayout>
                            </Frame>
                        </VerticalStackLayout>
                    </Frame>
                </VerticalStackLayout>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>

    <!-- Audio Player Bottom Sheet -->
    <uranium:UraniumContentPage.Attachments>
        <material:BottomSheetView x:Name="AudioPlayerBottomSheet"
                                  IsPresented="{Binding IsAudioPlayerSheetOpen, Mode=TwoWay}"
                                  DisablePageWhenOpened="False"
                                  CloseOnTapOutside="True"
                                  BackgroundColor="Transparent">
            <material:BottomSheetView.Header>
                <!-- Custom Header with Handle and Metadata -->
                <Border StrokeShape="RoundRectangle 32"
                        Margin="16,10,16,0"
                        Padding="0">
                    <Border.GestureRecognizers>
                        <PanGestureRecognizer PanUpdated="OnHeaderPanUpdated"/>
                    </Border.GestureRecognizers>
                    <VerticalStackLayout>
                        <VerticalStackLayout.Effects>
                            <uranium:BlurEffect Mode="Light"
                                                AccentOpacity="0.9"/>
                        </VerticalStackLayout.Effects>
                        
                        <Grid RowDefinitions="Auto,Auto"
                              Padding="20,0,20,0"
                              Margin="0">
                            <!-- Metadata Section -->
                            <Grid Grid.Row="1"
                                  ColumnDefinitions="*,Auto,50"
                                  ColumnSpacing="15"
                                  Padding="0">
                                <!-- Session Info -->
                                <VerticalStackLayout Grid.Column="0"
                                                     Spacing="4"
                                                     VerticalOptions="Center">
                                    <Label Text="{Binding SessionDateText}"
                                           FontSize="18"
                                           FontAttributes="Bold"
                                           TextColor="Black"/>
                                    <Label Text="Meditation Session"
                                           FontSize="12"
                                           TextColor="Gray"/>
                                </VerticalStackLayout>

                                <!-- Play/Pause Button -->
                                <ImageButton Source="{Binding PlayPauseIconImage}"
                                             Command="{Binding TogglePlaybackCommand}"
                                             BackgroundColor="Transparent"
                                             Grid.Column="2"
                                             WidthRequest="80"
                                             HeightRequest="80"
                                             BorderColor="Transparent"/>
                                
                              
                                

                          
                            </Grid>
                        </Grid>
                    </VerticalStackLayout>
                </Border>
            </material:BottomSheetView.Header>
            
            <!-- Bottom Sheet Content -->
            <controls:AudioPlayerBottomSheet/>
        </material:BottomSheetView>
    </uranium:UraniumContentPage.Attachments>
</uranium:UraniumContentPage>
